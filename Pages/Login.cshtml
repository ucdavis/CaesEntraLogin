@page
@model CaesEntraLogin.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="text-center">
    <h1 class="display-4">Login</h1>
    <p>Please click the button below to login with your Microsoft account.</p>
    
    <div class="mt-4">
        <form method="post">
            <button type="submit" asp-page-handler="SignIn" class="btn btn-primary btn-lg">
                <i class="fas fa-sign-in-alt me-2"></i>Login with Microsoft
            </button>
        </form>
    </div>
    
    <div class="mt-3">
        <small class="text-muted">
            You will be redirected to Microsoft's secure login page.
        </small>
    </div>
</div>